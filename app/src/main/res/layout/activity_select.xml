<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.szfp.pos.SelectActivity">

    <com.szfp.view.flow.FlowTagLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/fl_number"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:padding="10dp"
            android:hint="@string/game_hint"
            android:textColor="@color/black"
            android:textSize="@dimen/text_font_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_result"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/c"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bt_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_font_24"
                android:text="@string/next"
                android:textColor="@color/wheat"
                android:background="@drawable/btn_bottom_confirm_bg"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
